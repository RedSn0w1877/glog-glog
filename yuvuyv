def get_world_population():
    url = 'https://www.worldometers.info/world-population/'
    try:
        response = requests.get(url)
        response.raise_for_status()
        soup = BeautifulSoup(response.text, 'html.parser')
        population_element = soup.find('div', class_='maincounter-number').find('span')
        if population_element:
            population = population_element.text.replace(',', '')
            return int(population)
        else:
            return "Population data not found"
    except requests.exceptions.RequestException as e:
        return f"Error fetching population data: {e}"
    except AttributeError:
        return "Population element not found on the page"